.services {

	.center {
		width: 80%;
		margin: 0 auto;

		.services-list {
			width: 100%;
			min-height: 300px;
			margin-bottom: 80px;
			border-top: 1px solid light-border;
			border-left: 1px solid light-border;
			border-bottom: 1px solid light-border;
			margin: 160px 0 80px;

			.box {
				position: relative;
				width: 25%;
				height: 299px;
				float: left;
				border-right: 1px solid light-border;
				cursor: pointer;

				+below(600px) {
					width: 100%;
					border-bottom: 1px solid light-border;
				}

				+between(600px, 1024px) {
					width: 50%;
				}

				&:nth-child(1) {
					+below(1024px) {
						border-right: 0;
					}

					+below(600px) {
						border-right: 1px solid light-border;
					}
				}

				&:nth-child(2) {
					+below(1024px) {
						border-left: 1px solid light-border;
					}
				}

				&:nth-child(3) {
					+below(1024px) {
						border-left: 1px solid light-border;
						border-bottom: 1px solid light-border;
					}

					+below(600px) {

					}
				}

				&:nth-child(4) {
					+below(1024px) {
						border-bottom: 1px solid light-border;
					}

					+below(600px) {
						border-left: 1px solid light-border;
					}
				}

				h4 {
					color: dark-title;
					text-transform: uppercase;
					font-family: 'opensans-regular';
					text-align: center;
					remify(font-size, 22px);
					margin-bottom: 0;
					padding: 80px 0 15px;
					font-weight: normal;

					+below(1024px) {
						remify(font-size, 25px);
						padding-top: 60px;
					}
				}

				p {
					font-family: 'opensans-light';
					text-align: center;
					color: medium-text;
					remify(font-size, 13px);
					padding: 0 6%;

					+below(1024px) {
						remify(font-size, 14px);
					}
				}

				&:before {
					content: '';
					display: block;
					position: absolute;
					height: 120px;
					width: 120px;
					border-radius: 50%;
					border: 1px solid light-border;
					top: -60px;
					background-color: white;
					left: 50%;
					transform: translate(-50%);
					transition: background .3s linear;
					overflow: hidden;
				}

				&:hover {
					&:before {
						background-color: light-blue;
					}
				}

				&:nth-child(1) {
					&:before {
						background-image: url(img-path + 'icon-code.png');
						background-position: center 38px;
						background-repeat: no-repeat;
						background-size: contain;
					}

					&:hover {
						&:before {
							background-position: center -38px;
						}
					}
				}

				&:nth-child(2) {
					&:before {
						background-image: url(img-path + 'icon-code.png');
						background-position: center 38px;
						background-repeat: no-repeat;
						background-size: contain;
					}

					&:hover {
						&:before {
							background-position: center -38px;
						}
					}
				}

				&:nth-child(3) {
					&:before {
						background-image: url(img-path + 'icon-code.png');
						background-position: center 38px;
						background-repeat: no-repeat;
						background-size: contain;
					}

					&:hover {
						&:before {
							background-position: center -38px;
						}
					}
				}

				&:nth-child(4) {
					&:before {
						background-image: url(img-path + 'icon-code.png');
						background-position: center 38px;
						background-repeat: no-repeat;
						background-size: contain;
					}

					&:hover {
						&:before {
							background-position: center -38px;
						}
					}
				}
			}
		}
	}
}