.team {
	border-top: 1px solid #eeeeff;

	.team-list {
		margin: 40px 0 0;
		overflow: hidden;
		height: 400px;

		.team-item {
			display: inline-block;
			position: relative;
			width: 25%;
			height: 100%;
			font-size: 0;

			img {
				width: 100%;
				height: auto;
				filter: grayscale(100%);
				transition: filter .5s ease-in-out;

				&:hover {
					filter: grayscale(0%);					
				}
			}			

			.description {
				width: 100%;
				height: 0;
				position: absolute;
				bottom: 0;
				background: light-blue;
				
				&.memberAnimate {
					animation: memberAnimate .5s linear;
					animation-fill-mode: forwards;
					
					@keyframes memberAnimate {
						0% {
							height: 0%;
						}
						
						100% {
							height: 25%;
						}
					}
				}
			}
		}
	}
}