.team {
	border-top: 1px solid #eeeeff;
	
	.team-list {
		margin: 40px 0 0;
		overflow: hidden;
		height: 400px;

		.team-item {
			display: inline-block;
			width: 25%;
			font-size: 0;
			
			img {
				width: 100%;
				height: auto;
				filter: grayscale(100%);
				transition: .3s filter ease-in-out;
				
				&:hover {
					filter: grayscale(0%);
				}
			}
		}
	}
}