.team {
	border-top: 1px solid #eeeeff;

	.team-list {
		margin: 40px 0 0;
		overflow: hidden;

		.team-item {
			display: inline-block;
			position: relative;
			width: 25%;
			font-size: 0;
			overflow: hidden;

			img {
				width: 100%;
				height: auto;
				filter: grayscale(100%);
				transition: filter .2s ease-in-out;				
			}			

			.description {
				width: 100%;
				height: 0;
				position: absolute;
				bottom: 0;
				background: light-blue;
			}
			
			&:hover {
				img {
					filter: grayscale(0%);
				}
			}
		}
	}
}