* {
    box-sizing: border-box;
    text-rendering: optimizeLegibility;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

html,
body {
    &.hidden-scroll {
        overflow: hidden;
    }    

    .left { float: left; }
    .right { float: right; }

    .clearfix {
        clear: both;
    }

    .hide { display: none; }

    .show { display: block; }
}